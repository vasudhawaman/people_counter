<!DOCTYPE html>
<html>
<head>
  <title>Live People Counter</title>
  <style>
    body {
      font-family: sans-serif;
      text-align: center;
      margin-top: 100px;
    }
    button {
      padding: 10px 20px;
      margin: 10px;
      font-size: 18px;
      cursor: pointer;
    }
    #count {
      font-size: 40px;
      margin: 20px;
    }
  </style>
</head>
<body>
  <h1>Live People Count</h1>
  <div id="count"><%= count %></div>

  <button onclick="fetch('/add')">➕ Add</button>
  <button onclick="fetch('/sub')">➖ Subtract</button>

  <script>
    const eventSource = new EventSource('/events');

    eventSource.onmessage = (event) => {
      const data = JSON.parse(event.data);
      document.getElementById('count').textContent = data.count;
    };
  </script>
</body>
</html>
